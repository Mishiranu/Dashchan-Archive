<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.mishiranu.dashchan.chan.local"
	android:versionCode="1"
	android:versionName="1.8">

	<uses-feature
		android:name="chan.extension" />

	<application
		android:icon="@null"
		android:allowBackup="false"
		android:label="Dashchan for localhost">

		<meta-data
			android:name="chan.extension.name"
			android:value="local" />

		<meta-data
			android:name="chan.extension.version"
			android:value="1" />

		<meta-data
			android:name="chan.extension.icon"
			android:resource="@drawable/ic_custom_local" />

		<meta-data
			android:name="chan.extension.source"
			android:value="//raw.githubusercontent.com/Mishiranu/Dashchan/master/update/data.json" />

		<meta-data
			android:name="chan.extension.class.configuration"
			android:value=".LocalChanConfiguration" />

		<meta-data
			android:name="chan.extension.class.performer"
			android:value=".LocalChanPerformer" />

		<meta-data
			android:name="chan.extension.class.locator"
			android:value=".LocalChanLocator" />

		<meta-data
			android:name="chan.extension.class.markup"
			android:value=".LocalChanMarkup" />

		<activity
			android:name="chan.app.UriHandlerActivity"
			android:label="Dashchan"
		    android:theme="@android:style/Theme.NoDisplay">

			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.DEFAULT" />
				<category android:name="android.intent.category.BROWSABLE" />
				<data android:scheme="file" />
				<data android:mimeType="text/html" />
			</intent-filter>

		</activity>

	</application>

</manifest>
